				type  = "hidden"
				name  = "tourn_id"
				value = "<% $tourn->id %>"
			>

			<input
				type  = "hidden"
				name  = "event_id"
				value = "<% $event->id %>"
			>

			<input
				type  = "hidden"
				name  = "sort_by"
				value = "<% $sort_by %>"
			>

			<table id="sweeps">

