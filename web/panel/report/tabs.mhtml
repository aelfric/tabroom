<%args>
	$tourn
	$tourn_settings
	$person
	$perms
</%args>
<%init>

	my @events;
	my @categories;

	if (${$perms}{"by_event"}) {

		@events = $tourn->events;
		@events = $m->comp("/funclib/event_perms.mas",
			perms => $perms,
			events => \@events
		);

		my %done;

		foreach my $event (@events) {
			push @categories, $event->category unless $done{$event->category}++;
		}

	} else {
		@events = $tourn->events;
		@categories = $tourn->categories();
	}

	@events = sort {$a->name cmp $b->name} @events;
	@events = sort {$a->type cmp $b->type} @events;

</%init>

	<& "menu.mas",
		tourn  => $tourn,
		whoami => "tabs"
	&>

	<div class="main">

		<h2>Diagnostic Reports</h2>

		<form
			action = "pref_experience.mhtml"
			method = "post"
		>

		<div class="row">

			<span class="third">
				Pref Experience Report
			</span>

			<span class="third">

				<select
					name  = "event_id"
					class = "fixedmed"
				>
% 					foreach my $event (@events) {
						<option <% scalar @events == 1 ? 'selected' : "" %>
							value="<% $event->id %>"
						><% $event->name %></option>
% 					}
				</select>
			</span>

			<span class="third rightalign">
				<input
					type  = "submit"
					value = "Show"
				>
			</span>

		</div>
		</form>

		<h4>Hand Tab Printouts</h4>

		<div class="row">

			<form action="cards/speech_tabsheets.mhtml" method="post">

			<span class="third">
				IE tab Sheets
			</span>

			<span class="third">
				<select name="event_id" class="fixedmed">
					<option value="all"> All Events </option>

% 					foreach my $event (@events) {
						<option <% scalar @events == 1 ? 'selected' : "" %>
							value="<% $event->id %>"> <% $event->name %> </option>
% 					}

				</select>
			</span>

			<span class="third rightalign">
				<input type="submit" value="Print" >
			</span>

			</form>

		</div>

		<div class="row">

			<form action="cards/debate.mhtml" method="post">

			<span class="third">
				Debate cards
			</span>

			<span class="third">
				<select name="event_id" class="fixedmed">
					<option value="all"> All Events </option>

% 					foreach my $event (@events) {
%						next if $event->type eq "speech" || $event->type eq "congress";
						<option <% scalar @events == 1 ? 'selected' : "" %>
							value="<% $event->id %>"> <% $event->name %> </option>
% 					}

				</select>
			</span>

			<span class="third rightalign">
				<input
					type  = "submit"
					value = "Print"
				>
			</span>

			</form>

		</div>

		<div class="row">

			<form
				action = "cards/speech.mhtml"
				method = "post"
			>

			<span class="third">
				Speech cards
			</span>

			<span class="third">
				<select name="event_id" class="fixedmed">
					<option value="all"> All Events </option>

% 					foreach my $event (@events) {
%						next if ($event->type ne "speech");
						<option <% scalar @events == 1 ? 'selected' : "" %>
							value="<% $event->id %>"> <% $event->name %> </option>
% 					}

				</select>
			</span>

			<span class="third rightalign">
				<input  type="submit" value="Print" >
			</span>

			</form>

		</div>

		<div class="row">

			<form action="cards/debate_judges.mhtml" method="post">

			<span class="third">
				Debate judge cards
			</span>

			<span class="third">
				<select
					name  = "category_id"
					class = "fixedmed"
				>
% 					foreach my $category (@categories) {
%						next if $category && $category->id != $category->id;
						<option value="<% $category->id %>"> <% $category->name %> </option>
% 					}

				</select>
			</span>

			<span class="third rightalign">
				<input  type="submit" value="Print" >
			</span>

			</form>

		</div>

		<div class="row">

			<form action="cards/congress_tabsheets.mhtml" method="post">

			<span class="third">
				Congress-style tab sheets
			</span>

			<span class="third">
				<select name="event_id" class="fixedmed">
					<option value="all"> All Events </option>

% 					foreach my $event (@events) {
						<option <% scalar @events == 1 ? 'selected' : "" %>
							value="<% $event->id %>"> <% $event->name %> </option>
% 					}

				</select>
			</span>

			<span class="third rightalign">
				<input  type="submit" value="Print" >
			</span>

			</form>

		</div>

		<div class="row">

			<form action="judge_labels.mhtml" method="post">

			<span class="third">
				Judge labels with pools
			</span>

			<span class="third">
				<select name="category_id" class="fixedmed">
% 					foreach my $category (@categories) {
						<option
							value="<% $category->id %>"
						> <% $category->name %> </option>
% 					}

				</select>
			</span>

			<span class="third rightalign">
				<input  type="submit" value="Print" >
			</span>
			</form>
		</div>

	</div>
