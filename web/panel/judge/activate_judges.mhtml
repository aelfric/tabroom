<%args>
	$category_id
	$active => 0
</%args>
<%init>

	my $category = Tab::Category->retrieve($category_id);

	Tab::Judge->set_sql( deactivate => " update judge set active = ? where category = ? ");
	Tab::Judge->sql_deactivate->execute($active, $category->id);

	my $msg = "Judge category ".$category->name." judges all marked inactive";

	if ($active > 0) {
		$msg = "Judge category ".$category->name." judges all marked active";
	}

	$m->redirect("activate.mhtml?category_id=$category_id&msg=$msg");

</%init>

