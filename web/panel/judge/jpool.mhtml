					<thead>
						<tr class="yellowrow smallish">

%							if ($category_settings{"ask_parli"}) {
								<th>
									P
								</th>
%							}

							<th>
								Name
							</th>

%							if ($category_settings{"prefs"}) {
								<th title="Average Pref">
									AP
								</th>
%							}

