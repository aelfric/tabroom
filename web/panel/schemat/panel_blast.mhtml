<%args>
	$person
	$tourn
	$tourn_settings
	$panel_id => undef
	$confirm  => undef
	$message  => undef
	$motion   => undef
	$only     => undef
</%args>
<%init>

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;
	my $now = DateTime->now( time_zone => $tz);

	my $panel = Tab::Panel->retrieve($panel_id) if $panel_id;
	my $round = $panel->round;
	my $event = $round->event;

	my $msg;

	if ($confirm) {

		unless ($panel) {
			my $msg = "Pick a section plz";
			$m->redirect("/panel/schemat/show.mhtml?event_id=".$event->id."&msg=$msg");
		}

		if ($ARGS{"blast_type"} eq "message") {

			$msg = $m->comp("blast_message.mhtml",
				panel        => $panel,
				round        => $panel->round,
				message      => $message,
				no_followers => $ARGS{"no_followers"},
				sendto       => $only,
				return       => "comecrawlingbacktome"
			);

		} elsif ( $event->type eq "speech" || $event->type eq "congress" ) {

			$msg = $m->comp("blast_ie.mas",
				panel          => $panel,
				event          => $event,
				tourn          => $tourn,
				tourn_settings => $tourn_settings,
				message        => $message,
				no_followers   => $ARGS{"no_followers"},
				only           => $only
			);

		} elsif ( $event->type eq "mock_trial") {

			$msg = $m->comp("blast_mt.mas",
				panel          => $panel,
				event          => $event,
				tourn          => $tourn,
				tourn_settings => $tourn_settings,
				message        => $message,
				only           => $only
			);

		} else {

			$msg = $m->comp("blast_debate.mas",
				panel          => $panel,
				event          => $event,
				tourn          => $tourn,
				tourn_settings => $tourn_settings,
				message        => $message,
				only           => $only,
				no_followers   => $ARGS{"no_followers"},
				motion         => $motion
			);
		}

		unless ($msg) {
			$msg = "Email and text message sent to folks in this section";
		}

		$m->redirect("panel_view.mhtml?panel_id=".$panel->id."&msg=$msg");

	}

</%init>

	<script>

		function checkType() {

			var blastType = $("input[name='blast_type']:checked").val();

			if (blastType === "pairing") {

				var message = $("#blast_message").val();
				$("#blast_message").val(message.substring(0, 50));
				$("#blast_message").attr("maxlength", 50);
				$("#blast_message").attr("placeholder", "50 characters maximum");

			} else if (blastType === "message") {

				$("#blast_message").attr("maxlength", 150);
				$("#blast_message").attr("placeholder", "150 characters maximum");

			} else if (blastType === "drone") {

                alertify.error("Drone has been dispatched to <br /> <% $panel->room ? $panel->room->name : "those entries" %>. <br /><br />They will not trouble you again.");
				$("#blast_type_pairing").prop('checked', true);
				checkType();
			}

			fixVisual();
		}

		$(document).ready(function() {
			checkType();
		});

	</script>

	<div class="main">

		<h2>Blast Pairing</h2>

		<div class="full nospace padtopmore martopmore padbottom">
			<span class="third nospace">
				<h5 class="nospace">
					Section <% $panel->letter %>
				</h5>
			</span>

			<span class="third nospace bigger semibold bluetext">
					Room <% $panel->room ? $panel->room->name : "NONE" %>
			</span>

			<span class="third nospace bigger semibold rightalign">
				<% $round->realname %> of <% $round->event->name %>
			</span>
		</div>

		<form action="panel_blast.mhtml">

		<input
			type  = "hidden"
			name  = "panel_id"
			value = "<% $panel->id %>"
		>

		<div class="row">

			<span class="quarter semibold">
				Blast Type
			</span>

			<span class="threequarters">
				<label for="blast_type_pairing">
					<span class="quarter hover">
						<input
							type     = "radio"
							class    = "notfirst"
							name     = "blast_type"
							id       = "blast_type_pairing"
							value    = "pairing"
							tabindex = -1
							checked  = true
							onClick = "checkType();"
						> Pairing
					</span>
				</label>

				<label for="blast_type_message">
					<span class="quarter hover">
						<input
							class    = "notfirst"
							type     = "radio"
							name     = "blast_type"
							id       = "blast_type_message"
							tabindex = -1
							value    = "message"
							onClick = "checkType();"
						> Message Only
					</span>
				</label>

%				if ($person->id < 5 || $person->id == 25656 || $person->id == 1549) {
					<label for="blast_type_drone">
						<span class="quarter hover">
							<input
								class    = "notfirst"
								type     = "radio"
								name     = "blast_type"
								id       = "blast_type_drone"
								tabindex = -1
								value    = "drone"
								onClick = "checkType();"
							> Drone Strike
						</span>
					</label>
%				}
			</span>
		</div>

		<div class="row">
			<span class="quarter semibold">
				Message
			</span>
			<span class="threefifths padvert">
				<input
					type        = "text"
					id  		= "blast_message"
					name        = "message"
					maxlength   = "150"
					size        = "64"
					placeholder = "150 charaters maximum"
				>
			</span>
		</div>

		<div class="row">
			<span class="quarter semibold">
				Send Blast To
			</span>

			<span class="threequarters">
				<label for="everyone">
					<span class="quarter hover">
						<input
							type  = "radio"
							name  = "only"
							id    = "everyone"
							value = ""
							checked
						> Everyone
					</span>
				</label>
				<label for="judges">
					<span class="hover quarter">
						<input
							type  = "radio"
							id    = "judges"
							name  = "only"
							value = "judges"
						> Judges Only
					</span>
				</label>
				<label for="entries">
					<span class="hover quarter">
						<input
							type  = "radio"
							id    = "entries"
							name  = "only"
							value = "entries"
						> Entries Only
					</span>
				</label>

				<label for="no_followers">
					<span class="quarter hover" title="Check this to send to linked accounts ONLY, not additional followers of the entry">
						<input
							type    = "checkbox"
							name    = "no_followers"
							id      = "no_followers"
							value   = "1"
						> No Followers
					</span>
				</label>

			</span>
		</div>

%		if ($round->event->type eq "wudc" || $round->event->type eq "wsdc") {

			<div class="row">

				<span class="quarter">
					Include Motion:
				</span>

				<label for="include">
					<span class="quarter hover centeralign">
						<input
							type  = "checkbox"
							class = "largecheck"
							name  = "motion"
							id    = "include"
							value = "1"
						>
					</span>
				</label>

				<span class="half">
					<% $round->setting("motion") %>
				</span>

			</div>
%		}

		<span class="liblrow rightalign">
			<span class="third centeralign">
				<input
					type        = "submit"
					name        = "confirm"
					value       = "Send email/text blast"
				>
			</span>
		</span>
		</form>

		<h5 class="padvertmore">
			In Room:
		</h5>

%		foreach my $entry ($m->comp('/funclib/panel_entries.mas', panel => $panel)) {
			<span class="quarter">
				Entry <% $entry->code %>
			</span>
%		}

%		foreach my $judge ($m->comp('/funclib/panel_judges.mas', panel => $panel)) {
			<span class="quarter">
				Judge <% $judge->first." ".$judge->last %>
			</span>
%		}

	</div>

	<div class="menu">

		<div class="sidenote">

			<h4>Pairings/Printouts</h4>

			<a
				class = "blue block"
				href  = "show.mhtml?round_id=<% $round->id %>"
			>
				<% $event->abbr %> Round <% $round->name %> Pairing
			</a>

			<a
				class = "blue block"
				href  = "/panel/report/print_ballots.mhtml?panel_id=<% $panel->id %>"
			>
				Print Master Ballots
			</a>

			<a
				class = "blue block"
				href  = "/panel/report/posting.mhtml?panel_id=<% $panel->id %>"
			>
				Print Round Posting
			</a>

			<a
				class = "dkblue block"
				href  = "/panel/schemat/panel_blast.mhtml?panel_id=<% $panel->id %>"
			>
				Text/email blast this section
			</a>

		</div>


%		if ($round->flighted > 1) {
			<div class="sidenote">
				<h4>Flight</h4>

				<form
					action = "panel_flight_save.mhtml"
					method = "post"
				>

				<span class="row block centeralign">

					<input
						type  = "hidden"
						name  = "panel_id"
						value = "<% $panel_id %>"
					>

					<select
						name     = "flight"
						onChange = 'this.form.submit();'
						class    = "fixedsmall"
					>

						<option value="">None</option>
%						foreach my $flight ( 1 .. $round->flighted ) {
							<option
								value="<% $flight %>"
								<% $flight == $panel->flight ? "selected" : "" %>
							><% $flight %></option>
%						}
					</select>
				</span>
				</form>
			</div>
%		}

	</div>
