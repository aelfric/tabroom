			value = "<% $round->id %>"
		>

		<div class="wrap">

%		foreach my $panel (@panels) {

			<span class="pagehalf marvertno">

<%perl>
				my @judges = $m->comp(
					"/funclib/panel_judges.mas",
					panel => $panel
				);

				my %entry_wins = $m->comp(
					"/funclib/entry_wins.mas",
