<%args>
	$event_id
</%args>
<%init>

	my $event = Tab::Event->retrieve( $event_id );
	my @rounds = Tab::Round->search( event => $event_id );

	my @tiers = Tab::RatingTier->search( category=> $event->category);

	my $hi=0;
	my $lo=999;
	my $hi_off=-99;

	foreach my $tier (@tiers) {
		if ($tier->name > $hi ) { $hi = $tier->name; }
		if ($tier->name < $lo ) { $lo = $tier->name; }
	}

	my %rating_count;
	my %off_count;
    my $dbh = Tab::DBI->db_Main();

	foreach my $round (@rounds) {

		my $sth = $dbh->prepare("
			select ballot.judge, rating_tier.name, ballot.entry, panel.id
			from panel
			left join ballot on ballot.panel = panel.id
			left join rating on rating.judge = ballot.judge and rating.entry = ballot.entry
			left join rating_tier on rating.rating_tier = rating_tier.id and rating_tier.id > 0
			where panel.round = ".$round->id."
			and ballot.entry > 0
			group by ballot.entry, ballot.judge
			order by ballot.side, ballot.judge
		");

		$sth->execute();

		my %prefs_record = ();
		my @panels;

		while( my ($judge, $pref, $entry, $panel)  = $sth->fetchrow_array() ) {
			$prefs_record{$judge}{$panel}{"display"} .= '<span class="half nospace rightalign">'.$pref.'</span>' if $pref;
			$prefs_record{$judge}{$panel}{"display"} .= '<span class="half nospace rightalign">&ndash;</span>' unless $pref;
			$prefs_record{$judge}{$panel}{"raw"} .= '/' if $prefs_record{$judge}{$panel}{"raw"};
			$prefs_record{$judge}{$panel}{"raw"} .= sprintf("%.1f", $pref);
			$prefs_record{$panel}{$entry} += $pref;
			push @panels, $panel;
		}

		my %used;
		foreach my $panel (@panels) {
			next if $used{$panel}++;

			foreach my $entry (keys %{$prefs_record{$panel}}) {
				if ($prefs_record{$panel}{"diff"}) {
					$prefs_record{$panel}{"diff"} = abs($prefs_record{$panel}{$entry}  - $prefs_record{$panel}{"diff"});
				} else {
					$prefs_record{$panel}{"diff"} = $prefs_record{$panel}{$entry} unless $prefs_record{$panel}{"diff"};
				}
			}

		}

		Tab::Panel->columns(TEMP => "judge_id");

		Tab::Panel->set_sql( schemat => "
			select distinct ballot.judge as judge_id, panel.*
			from panel, ballot
			where panel.round = ?
			and ballot.panel=panel.id
			order by panel.id asc
		");

		my @panels = Tab::Panel->search_schemat($round->id);

		foreach my $panel (@panels) {

			my $prefstring = $prefs_record{$panel->judge_id}{$panel->id}{"raw"};

			my $slash_index = index($prefstring, "/");

			my $rat1 = 0;
			my $rat2 = 0;
			my $off = -1;

			if (length($prefstring) > 0) {
				$rat1 = substr($prefstring, 0, 1);
			}

			if ( $slash_index > -1 ) {
				$rat2 = substr($prefstring, $slash_index+1, 1);
			}

			if ( $rat1 > 0 ) {
				$rating_count{$round->id}{$rat1} ++;
			}

			if ( $rat2 > 0 ) {
				$rating_count{$round->id}{$rat2} ++;
			}

			if ( $rat1>0 and $rat2>0 ) {
				$off = abs($rat1-$rat2);
			}

			if ( $off > -1 ) {
				$off_count{$round->id}{$off}++;
			}

			if ( $hi_off < $off ) {
				$hi_off = $off;
			}
		}
	}
</%init>

<div class="main">

%	my %pref_tot;
%	my $pref_count;
%	my %off_tot;
%	my $off_count;

	<h2>Rating Tiers Diagnostics for <% $event->name %></h2>
	<h5>How am I doing, and how many people are going to yell at me?</h5>
	<br>

	<& /funclib/tablesorter.mas, table => "sortme" &>

	<table cellpadding="4" width="100%" id="sortme">

		<thead>

		<tr class="yellowrow">

			<th class="smallish">
				Round
			</td>

%		for ( my $i=$lo; $i <= $hi; $i++) {

			<th class="smallish">
				Tier <% $i %>
			</td>

%		}

%		my $notfirst;
%		for ( my $i=0; $i <= $hi_off; $i++) {

			<th class="<% $notfirst++ ? "" : "borderleft" %> centeralign smallish">
				Off <% $i %>
			</td>

%		}


		</tr>

		</thead>

		<tbody>

%		my $switch = 1;

%		foreach my $round (@rounds) {

			<tr>

				<td>
					<span class="hidden">
						<% $round->name %>
					</span>
					<% $round->realname %>
				</td>

%				for ( $lo .. $hi) {

				<td class="centeralign">
					<% $rating_count{$round->id}{$_} %>
%					$pref_tot{$_}+=$rating_count{$round->id}{$_};
%					$pref_count += $rating_count{$round->id}{$_};
				</td>

%				}

%			undef $notfirst;
%			for ( my $i=0; $i <= $hi_off; $i++) {

				<td class="<% $notfirst++ ? "" : "borderleft" %> centeralign">
					<% $off_count{$round->id}{$i} %>
%					$off_tot{$i} += $off_count{$round->id}{$i};
%					$off_count += $off_count{$round->id}{$i};
				</td>

%			}

			</tr>

%		}

		<tr>
			<td>
				Totals:
			</td>

%			for ( my $i=$lo; $i <= $hi; $i++) {

			<td class="centeralign">
				<% $pref_tot{$i} %>
			</td>

%			}

%		undef $notfirst;
%		for ( my $i=0; $i <= $hi_off; $i++) {

			<td class="<% $notfirst++ ? "" : "borderleft" %> centeralign">
				<% $off_tot{$i} %>
			</td>

%		}

		</tr>

		<tr>
			<td>
				Percentage:
			</td>

%			for ( my $i=$lo; $i <= $hi; $i++) {

			<td class="centeralign">
				<% $pref_count ? sprintf("%.1f", ($pref_tot{$i}/$pref_count)*100 )."%" : "" %>
			</td>

%			}

%		undef $notfirst;
%		for ( my $i=0; $i <= $hi_off; $i++) {

			<td class="<% $notfirst++ ? "" : "borderleft" %> centeralign">
				<% sprintf("%.1f", ($off_tot{$i}/$off_count)*100 ) %>
			</td>

%		}

		</tr>

%		my $pref_ctr;
%		my $off_ctr;

		<tr>
			<td>
				Cume %
			</td>

%			for ( my $i=$lo; $i <= $hi; $i++) {

			<td class="centeralign">
%				$pref_ctr += $pref_tot{$i};
				<% $pref_count ? sprintf("%.1f", ($pref_ctr/$pref_count)*100 )."%" : "" %>
			</td>

%			}
%		undef $notfirst;

%		for ( my $i=0; $i <= $hi_off; $i++) {

			<td class="<% $notfirst++ ? "" : "borderleft" %> centeralign">
%				$off_ctr += $off_tot{$i};
				<% sprintf("%.1f", ($off_ctr/$off_count)*100 ) %>
			</td>

%		}

		</tr>
		</tbody>
	</table>
</div>

<div class="menu">
	<div class="sidenote">
		<a class="yellow block" href="/panel/schemat/show.mhtml?event_id=<% $event->id %>">
