					<span class="fifth">
						<% $short->{event_abbr} %>
					</span>

					<span class="quarter">
						<a
							class = "white hover full marno link-underline"
							href  = "/panel/schemat/show.mhtml?round_id=<% $short->{round_id} %>"
						>Round <% $short->{round_name} %></a>
					</span>

					<span class="quarter">
						Needs <% $short->{num_judges} || 1 %>, has <% $short->{judge_count} || 0 %>
				</div>
%			}
%		}

		<h6>Missing Rooms</h6>

%		if (scalar @{$no_rooms} < 1) {
