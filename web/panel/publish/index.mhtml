<%args>
	$tourn
	$tourn_settings
	$timeslot_id => undef
	$event_id    => undef
	$perms       => undef
</%args>
<%init>

	my ($eventref, $catref) = $m->comp(
		"/funclib/allowed_events.mas",
		tourn    => $tourn,
		perms    => $perms
	);

	my @events = @{$eventref};

	unless (@events) {
		$m->comp("/funclib/abort.mas",
			message => "The tournament ".$tourn->name." has no events or divisions configured."
		);
	}

	my %timeslots = $m->comp("/funclib/perms/timeslots.mas",
		tourn => $tourn,
		perms => $perms
	);

	my %rounds;
	my $limit;

	if ($event_id) {
		$limit .= " and round.event = ".int($event_id);
	} elsif ($timeslot_id) {
		$limit .= " and round.timeslot = ".int($timeslot_id);
	} elsif (@events) {
		$event_id = $events[0]->id;
		$limit .= " and round.event = ".int($event_id);
	}

	my $dbh = Tab::DBI->db_Main();

	if ($limit) {

		my $sth = $dbh->prepare("
			select
				round.id, round.name, round.label,
				event.type, event.abbr,
				round.published,
				round.post_primary, round.post_secondary, round.post_feedback,
				publish_prelim_chamber.value,
				publish_entry_list_no_byes.value,
				publish_entry_list.value,
				public_feedback.value,
				coach_wins.value,
				coach_points.value,
				coach_feedback.value

			from (round, event)

				left join round_setting publish_prelim_chamber
					on publish_prelim_chamber.round = round.id
					and publish_prelim_chamber.tag = 'publish_prelim_chamber'

				left join round_setting publish_entry_list_no_byes
					on publish_entry_list_no_byes.round = round.id
					and publish_entry_list_no_byes.tag = 'publish_entry_list_no_byes'

				left join round_setting publish_entry_list
					on publish_entry_list.round = round.id
					and publish_entry_list.tag = 'publish_entry_list'

				left join round_setting public_feedback
					on public_feedback.round = round.id
					and public_feedback.tag = 'public_feedback'

				left join round_setting coach_wins
					on coach_wins.round = round.id
					and coach_wins.tag = 'coach_wins'

				left join round_setting coach_points
					on coach_points.round = round.id
					and coach_points.tag = 'coach_points'

				left join round_setting coach_feedback
					on coach_feedback.round = round.id
					and coach_feedback.tag = 'coach_feedback'

			where round.event = event.id
			$limit
			order by round.name
		");

		$sth->execute();

</%init>

		<div class="main">

			<span class="third nospace">
				<h4>Mass Publish</h4>
			</span>
			<span
				class = "twothirds rightalign nospace"
				id    = "publish_buttonarea"
			>
			</span>

			<& "/funclib/tablesorter.mas", table => "publish" &>

			<table id="publish">
				<thead>
					<tr class="yellowrow">
						<th>
							Rd
						</th>

						<th class="centeralign">
							Schematic
						</th>

						<th class="centeralign">
							Primary Results <br /> (Deb W/L or IE/Con Rank)
						</th>

						<th class="centeralign">
							Secondary Results <br />(Point, Debate Rank)
						</th>

						<th class="centeralign" colspan="3">
							Feedback <br /> (RFD, Comments)
						</th>
					</tr>
				</thead>

				<tbody>
<%perl>
					while (
						my (
							$id, $name, $label,
							$event_type, $event_abbr,
							$publish,
							$post_primary, $post_secondary, $post_feedback,
							$publish_prelim_chamber,
							$publish_entry_list_no_byes,
							$publish_entry_list,
							$public_feedback
						) = $sth->fetchrow_array()
					) {

						$post_primary   = 0 unless $post_primary;
						$post_secondary = 0 unless $post_secondary;
						$post_feedback  = 0 unless $post_feedback;

						my %full = (
							0 => "",
							1 => "Will be visible to accounts with coach access to schools",
							2 => "Will be visible to coaches and competitors",
							3 => "Will be visible on the public web"
						);

						my %labels = (
							0 => "No",
							1 => "Co",
							2 => "Ent",
							3 => "Pub"
						);
</%perl>
						<tr>
							<td class="semibold bluetext centeralign">
								<span class="hidden"><% $name %>"</span>
								<% $event_abbr %>
								<% $label ? substr($label, 0, 2) : $name %>
							</td>

							<td class="nospace centeralign" style="width: 186px;">
								<span class="full nospace">
									<select
										target_id     = "<% $id %>"
										property_name = "published"
										onChange      = "postSwitch(this, 'publish_switch.mhtml');"
										class         = "fixedmost"
									>
										<option value="0"
											<% $publish ? "" : "selected" %>
										>Not Public</option>
										<option value="1"
											<% $publish == 1 ? "selected" : "" %>
										>Public</option>
										<option value="2"
											<% $publish == 2 ? "selected" : "" %>
										>Public w/o Judges</option>
%										if ($event_type eq "congress") {
											<option value="5"
												<% (not defined $publish) && $publish_prelim_chamber ? "selected" : "" %>
											>Show Entries Their Chambers</option>
%										}
										<option value="3"
											<% (not defined $publish) && $publish_entry_list ? "selected" : "" %>
										>Entry List</option>
									</select>
								</span>
							</td>

							<td class="centeralign smaller nospace">
%								foreach my $key (0 .. 3) {
									<label for="<% $id %>_primary_<% $key %>">
										<span class="quarter hover" title="<% $full{$key} %>">
											<input
												type          = "radio"
												name          = "<% $id %>_primary"
												id            = "<% $id %>_primary_<% $key %>"
												target_id     = "<% $id %>"
												property_name = "post_primary"
												value         = "<% $key %>"
												onChange      = "postSwitch(this, 'publish_switch.mhtml');"
												<% $post_primary == $key ? "checked" : "" %>
											> <% $labels{$key} %>
										</span>
									</label>
%								}
							</td>

							<td class="centeralign smaller nospace">
%								foreach my $key (0 .. 3) {
									<label for="<% $id %>_secondary_<% $key %>" title="<% $full{$key} %>">
										<span class="quarter hover">
											<input
												type          = "radio"
												name          = "<% $id %>_secondary"
												id            = "<% $id %>_secondary_<% $key %>"
												target_id     = "<% $id %>"
												property_name = "post_secondary"
												value         = "<% $key %>"
												onChange      = "postSwitch(this, 'publish_switch.mhtml');"
												<% $post_secondary == $key ? "checked" : "" %>
											> <% $labels{$key} %>
										</span>
									</label>
%								}
							</td>

							<td class="centeralign smaller nospace nowrap">
%								foreach my $key (0 .. 2) {
									<label for="<% $id %>_feedback_<% $key %>" title="<% $full{$key} %>">
										<span class="third hover">
											<input
												type          = "radio"
												name          = "<% $id %>_feedback"
												id            = "<% $id %>_feedback_<% $key %>"
												target_id     = "<% $id %>"
												property_name = "post_feedback"
												value         = "<% $key %>"
												onChange      = "postSwitch(this, 'publish_switch.mhtml');"
												<% $post_feedback == $key ? "checked" : "" %>
											> <% $labels{$key} %>
										</span>
									</label>
%								}
							</td>
						</tr>
%					}
				</tbody>
			</table>

			<div class="centeralign explain semibold bluetext martopmore">
				NO = No results visible,
				Cch = Visible to coaches (school admins),
				Ent = Coaches &amp; Competitors,
				Pub = Results public
			</div>

		</div>

%		$sth->finish();
%		;

%	} else {
		<div class="main">
		</div>
%	}


	<div class="menu">

		<div class="sidenote">

			<h4>By Event</h4>

			<form action="index.mhtml" method="post">
				<div class="full even">
					<select
						name     = "event_id"
						class    = "fixedmost"
						onChange = "this.form.submit();";
					>
						<option value=""></option>
%						foreach my $event (@events) {
							<option
								value="<% $event->id %>"
								<% $event->id == $event_id ? "selected" : "" %>
							><% $event->abbr %></option>
%						}
					</select>
				</div>
			</form>

			<h4>Or, By Timeslot</h4>

			<form action="index.mhtml" method="post">
				<div class="full even">
					<select
						name     = "timeslot_id"
						class    = "fixedmost"
						onChange = "this.form.submit();";
					>
						<option value=""></option>
%						foreach my $timeslot (sort keys %timeslots) {
							<option
								value="<% $timeslot %>"
								<% $timeslot == $timeslot_id ? "selected" : "" %>
							><% $timeslots{$timeslot}{name} %></option>
%						}
					</select>
				</div>
			</form>
		</div>

<%perl>

	my @categories = $m->comp("/funclib/perms/categories.mas",
		tourn => $tourn,
		perms => $perms
	);

	my %events = $m->comp("/funclib/perms/events.mas",
		tourn   => $tourn,
		perms   => $perms,
		limited => 1
	);

	my @types;

	my $sth = $dbh->prepare("
		select distinct type from event where tourn = ? order by type
	");

	$sth->execute($tourn->id);

	my %used;
	foreach my $key (keys %events) {
		next if $used{$events{$key}{type}}++;
		push @types, $events{$key}{type};
	}

	if (scalar @categories == 1) {
		undef @categories;
	}

	if (scalar @types == 1) {
		undef @types;
	}

</%perl>

		<div class="sidenote">
			<h4>Mass Publication</h4>

			<form
				action="publish_everything.mhtml"
				method="post"
			>

			<div class="nospace full flexkids">
%				if (@categories || @types) {
					<div class="row">
						<span class='quarter semibold bluetext'>
							Scope
						</span>
						<span class="threequarters centeralign">
							<select name="scope">
								<option value="all">All events</option>
%								foreach my $cat (@categories) {
									<option value="cat_<% $cat->id %>"><% $cat->abbr %> events</option>
%								}
%								foreach my $type (@types) {
									<option value="typ_<% $type %>"><% ucfirst($type) %> type events</option>
%								}
							</select>
						</span>
					</div>
%				}

				<div class="row">
					<span class='quarter semibold bluetext'>
						Schematics
					</span>
					<span class="threequarters centeralign">
						<select name="schematics" class="fixedmost">
							<option value="1">Public</option>
							<option value="2">Public w/o Judges</option>
							<option value="3">Entry List</option>
							<option value="0">None</option>
						</select>
					</span>
				</div>

				<div class="row">
					<span class='quarter semibold bluetext'>
						Primary
					</span>
					<span class="threequarters centeralign">
						<select name="primary" class="fixedmost">
							<option value="3">Public</option>
							<option value="2">Competitors &amp; coaches</option>
							<option value="1">Coaches only</option>
							<option value="0">None</option>
						</select>
					</span>
				</div>

				<div class="row">
					<span class='quarter semibold bluetext'>
						Secondary
					</span>
					<span class="threequarters centeralign">
						<select name="secondary" class="fixedmost">
							<option value="3">Public</option>
							<option value="2">Competitors &amp; coaches</option>
							<option value="1">Coaches only</option>
							<option value="0">None</option>
						</select>
					</span>
				</div>

				<div class="row">
					<span class='quarter semibold bluetext'>
						Feedback
					</span>
					<span class="threequarters centeralign">
						<select name="feedback" class="fixedmost">
							<option value="2">Competitors &amp; coaches</option>
							<option value="1">Coaches only</option>
							<option value="0">None</option>
						</select>
					</span>
				</div>

				<div class="libl rightalign flexrow">
					<span class='half centeralign'>
						<input type="submit" value="Publish">
					</span>
				</div>

			</div>
			</form>
		</div>
	</div>
