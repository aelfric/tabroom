<%args>
	$tourn
	$person
	$perms
</%args>
<%init>

	my $scope = substr($ARGS{"scope"}, 0, 3);

	my %events = $m->comp("/funclib/perms/events.mas",
		tourn => $tourn,
		perms => $perms
	);

	Tab::debuglog("Scope $scope");

	if ($scope eq "cat") {

		my @oe = keys %events;

		my $cat_id = $ARGS{"scope"};
		Tab::debulog("Scope $cat_id");
		$cat_id =~ s/[\D_]//g;
		Tab::debulog("Now Scope $cat_id");

		foreach my $event (keys %events) {
			unless ($events{$event}{"type"} eq $cat_id) {
				delete $events{$event};
			}
		}

	} elsif ($ARGS{"scope"}) {

		my $type = $ARGS{"scope"};
		$type =~ s/typ_//g;

		foreach my $event (keys %events) {
			if ($events{$event}{"type"} eq $type) {
				delete $events{$event};
			}
		}
	}

	Tab::debuglog(keys %events);

	my $msg;
	my $last_event;

	foreach my $event_id (keys %events) {

		my $event = Tab::Event->retrieve($event_id);

		Tab::debuglog($event->abbr." is here");
		Tab::debuglog($ARGS{"schematics"});

		$msg .= ", " if $msg;
		$msg .= $event->abbr;

		foreach my $round ($event->rounds) {
			next unless $round->panels;
			$round->published($ARGS{"schematics"});
			$round->post_primary($ARGS{"primary"});
			$round->post_secondary($ARGS{"secondary"});
			$round->post_feedback($ARGS{"feedback"});

			Tab::debuglog("Round ".$round->id);
			$round->update();
			Tab::debuglog("Round Published ".$round->published);
		}

		$last_event = $event;

	}

	$msg = "Rounds in ".$msg." have been mass published";

	$m->redirect("index.mhtml?event_id=".$last_event."&msg=$msg");

</%init>
