<%args>
	$person
	$tourn
	$tourn_settings
</%args>
<%perl>

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	my $yeah;

	my @hotels = $tourn->hotels;

</%perl>

    <& "menu.mas",
		chosen         => "hotel",
        tourn_settings => $tourn_settings,
		tourn          => $tourn
	&>

	<& "/funclib/editor.mas", height => 256 &>

	<div class="main">

		<h2>Hotel Blocks</h2>

		<form
			action = "hotel_save.mhtml"
			method = "post"
		>
%		if (@hotels) {
			<h5 class="martop">
				Existing Hotel Blocs
			</h5>
%		}

%		foreach my $hotel (@hotels) {

%			$yeah++;

			<div class="row">
				<span class="threetenths">
					<input
						type  = "text"
						name  = "name_<% $hotel->id %>"
						size  = "32"
						value = "<% $hotel->name %>"
					>
				</span>

				<span class="fifth nospace smallish flexrow">
					<span class='twothirds padleft'>
						Multiply fees by
					</span>
					<span class='third '>
						<input
							type  = "text"
							name  = "multiple_<% $hotel->id %>"
							size  = "5"
							min   = "1"
							max   = "99"
							value = "<% $hotel->multiple %>"
						>
					</span>
				</span>

				<span class="fifth smallish flexrow">
					<span class='twothirds padleft'>
						Entry Surcharge
					</span>
					<span class='third '>
						<input
							type  = "text"
							name  = "surcharge_<% $hotel->id %>"
							size  = "5"
							min   = "1"
							max   = "99"
							value = "<% $hotel->surcharge %>"
						>
					</span>
				</span>

%				if ($tourn_settings->{require_hotel_confirmation}) {

					<span class="fifth smallish hover flexrow nospace padleft">
						<label for="no_confirm_<% $hotel->id %>">
							<span class='twothirds padleft'>
								No Confirm #
							</span>
							<span class='third '>
								<input
									type  = "checkbox"
									id    = "no_confirm_<% $hotel->id %>"
									name  = "no_confirm_<% $hotel->id %>"
									value = "1"
									<% $hotel->no_confirm ? "checked" : "" %>
								>
							</span>
						</label>
					</span>
%				}

				<span class="tenth rightalign padvert">
					<a
						href="hotel_rm.mhtml?hotel_id=<% $hotel->id %>"
						class="buttonwhite redtext fa fa-trash"
					></a>
				</span>
			</div>
%		}

%		if ($yeah) {
			<div class="libl rightalign ">
				<span class='third centeralign padvert'>
					<input
						type  = "submit"
						value = "Save Changes"
					>
				</span>
			</div>
%		}

		</form>

		<form action="hotel_add.mhtml" method="post">

		<input
			type  = "hidden"
			name  = "tourn_id"
			value = "<% $tourn->id %>"
		>

		<h5 class="martop">
			Add a new hotel block
		</h5>

		<div class="row">

			<span class="threetenths ">
				<input
					type        = "text"
					class       = "starthere"
					name        = "name"
					size        = "32"
					placeholder = "Name of new hotel"
				>
			</span>

			<span class="fifth  smallish">
				<span class='twothirds padleft'>
					Multiply fees by
				</span>
				<span class='third '>
					<input
						type = "text"
						name = "multiple"
						size = "5"
						min  = "1"
						max  = "99"
					>
				</span>
			</span>

			<span class="fifth nospace smallish">
				<span class='twothirds padleft'>
					Entry Surcharge
				</span>
				<span class='third '>
					<input
						type = "text"
						name = "surcharge"
						size = "5"
						min  = "1"
						max  = "99"
					>
				</span>
			</span>

%				if ($tourn_settings->{require_hotel_confirmation}) {
					<span class="fifth  smallish hover">
						<label for="no_confirm">
							<span class='twothirds '>
								No Confirm #
							</span>
							<span class='third '>
								<input
									type  = "checkbox"
									id    = "no_confirm"
									name  = "no_confirm"
									value = "1"
								>
							</span>
						</label>
					</span>
%				}

			<span class="tenth centeralign">
				<input
					type  = "submit"
					value = "Add"
				>
			</span>
		</div>
	</form>

		<form
			action = "hotel_save.mhtml"
			method = "post"
		>
		<div class="full martopmuchmore bluebordertop">
			<h6>Policy/Message for Registration</h6>

            <div class="full centeralign">
                <textarea
                    rows  = "5"
                    cols  = "65"
                    class = "full"
                    name  = "hotel_message"
                ><% $tourn_settings->{"hotel_message"} %></textarea>
            </div>
		</div>

		<div class="libl rightalign ">
			<span class='third centeralign padvert'>
				<input
					type  = "submit"
					value = "Save Changes"
				>
			</span>
		</div>
		</form>
	</div>

