<%args>
	$tourn
	$tourn_settings
	$category_id
	$perms
</%args>
<%init>

	my ($category, $category_settings, $categories) = $m->comp('perms.mas',
		tourn       => $tourn,
		perms       => $perms,
		category_id => $category_id
	);

</%init>

	<& menu.mas,
		category_id    => $category_id,
		tourn          => $tourn,
		tourn_settings => $tourn_settings,
		page           => "tiers",
		perms          => $perms,
	&>

	<div class="main">

		<h2>
			<% $category->name %>
		</h2>

		<& "tabbar.mas",
			tourn             => $tourn,
			whoami            => "prefs",
			perms             => $perms,
			tourn_settings    => $tourn_settings,
			category_settings => $category_settings,
			category          => $category
		&>

		<h4>
			<% $category_settings->{prefs} eq "tiered"
				|| $category_settings->{prefs} eq "caps"
				|| $category_settings->{prefs} eq "tiered_round"
					? "Mutually Preferred Judging"
					: "Community Prefs"
			%> scale
		</h4>

		<p>
			If you want to use cumulative prefs (Fewer 3s permit more 2s, etc)
			you must use numbers for MPJ tier names
		</p>

		<form
			action = "tier_mpj_save.mhtml"
			method = "post"
		>
		<input
			type  = "hidden"
			name  = "category_id"
			value = "<% $category->id %>"
		>

			<table>

				<tr class="yellowrow">

					<th class="smaller">
					</th>

					<th class="smaller">
						Name
					</th>

					<th class="smaller">
						Minimum
					</th>

					<th class="smaller">
						Maximum
					</th>

					<th class="smaller">
						Default
					</th>

					<th class="smaller">
						Strike
					</th>

					<th class="smaller">
						Conflict
					</th>

					<th>
					</th>

				</tr>

%				foreach my $tier (sort {$a->name cmp $b->name} $category->rating_tiers(type => "mpj")) {

					<tr class="row smallish centeralign">

						<td>
						</td>

						<td>
							<input
								type  = "text"
								name  = "<% $tier->id %>_name"
								size  = "4"
								value = "<% $tier->name %>">
						</td>

						<td>
							<input
								type      = "number"
								name      = "<% $tier->id %>_min"
								maxlength = "3"
								value     = "<% int($tier->min) %>"
								size      = "3"
								max       = "100"
								min       = "0"
							>
								<% $category_settings->{prefs} eq "caps" ? " Judges" : "%" %>
						</td>

						<td>
							<input
								type      = "number"
								name      = "<% $tier->id %>_max"
								value     = "<% int($tier->max) %>"
								size      = "3"
								max       = "100"
								min       = "0"
							>
								<% $category_settings->{prefs} eq "caps" ? " Judges" : "%" %>
						</td>


						<td class="nospace">
							<label for="<% $tier->id %>_start">
								<span class="hover padmore">
									<input
										type  = "checkbox"
										name  = "<% $tier->id %>_start"
										id    = "<% $tier->id %>_start"
										value = "1" <% ($tier->start) ? 'checked' : '' %> >
								</span>
							</label>
						</td>

						<td class="nospace">
							<label for="<% $tier->id %>_strike">
								<span class="hover padmore">
									<input
										type  = "checkbox"
										name  = "<% $tier->id %>_strike"
										id    = "<% $tier->id %>_strike"
										value = "1"
										 <% ($tier->strike) ? 'checked' : '' %> >
								</span>
							</label>
						</td>

						<td class="nospace">
							<label for="<% $tier->id %>_conflict">
								<span class="hover padmore">
									<input
										type  = "checkbox"
										name  = "<% $tier->id %>_conflict"
										id    = "<% $tier->id %>_conflict"
										value = "1"
										 <% ($tier->conflict) ? 'checked' : '' %> >
								</span>
							</label>
						</td>

						<td class="nospace">
							<span class="hover padmore">
								<a
									class="redtext fa fa-2x fa-trash"
									href="tier_rm.mhtml?tier_id=<% $tier->id %>"
								></a>
							</span>
						</td>
					</tr>
%				}

				<tr class="row">

					<th class="smaller">
						New
					</th>

					<td class="centeralign smallish">
						<input
							type  = "text"
							name  = "new_name"
							size  = "4"
							value = ""
							min   = "1"
							max   = "99"
						>
					</td>

					<td class="centeralign smallish">
						<input
							type      = "number"
							name      = "new_min"
							size      = "3"
							max       = "100"
							min       = "0"
						>
						<% $category_settings->{prefs} eq "caps" ? " Judges" : "%" %>
					</td>

					<td class="centeralign smallish">
						<input
							type      = "number"
							name      = "new_max"
							size      = "3"
							max       = "100"
							min       = "0"
						>
						<% $category_settings->{prefs} eq "caps" ? " Judges" : "%" %>
					</td>

					<td class="centeralign nospace">
						<label for="new_start" class="centeralign">
							<input
								type  = "checkbox"
								name  = "new_start"
								id    = "new_start"
								value = "1"
							>
						</label>
					</td>

					<td class="centeralign nospace">
						<label for="new_strike" class="centeralign">
							<input
								type  = "checkbox"
								name  = "new_strike"
								id    = "new_strike"
								value = "1"
							>
						</label>
					</td>

					<td class="centeralign nospace">
						<label for="new_conflict" class="centeralign">
							<input
								type  = "checkbox"
								name  = "new_conflict"
								id    = "new_conflict"
								value = "1"
							>
						</label>
					</td>

					<th>
					</th>
				</tr>
			</table>

			<div class="libl row rightalign">
				<span class="centeralign third padvert">
					<input
						type="submit"
						class="small"
						value="Save MPJ Ratings"
					>
				</span>
			</div>
		</form>
	</div>

