<%args>
	$tourn
	$perms
	$tourn_settings
	$person
	$person_settings
	$event_id => undef
</%args>
<%init>

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

    my ($event, $event_settings, $events) = $m->comp('perms.mas',
        tourn    => $tourn,
        perms    => $perms,
        event_id => $event_id
    );

	my @schools = $tourn->schools;
	my $event_followers = $event_settings->{"followers"};
	my @followers;

	my @evfs = eval {
		return @{$event_followers};
	};

	unless (@evfs) {
		my @evfs = eval {
			return split (',', $event_followers);
		};

		if (@evfs) {
			$event->setting("followers", "json", \@evfs);
		} else {
			$event->setting("followers", 0);
		}
	}

	foreach my $id (@evfs) {
		next unless $id;
		my $follower = Tab::Person->retrieve($id);
		push @followers, $follower;
	}

	my $backup_ids = $event_settings->{"backup_followers"};
	my @backup_followers;

	foreach my $id (@{$backup_ids}) {
		next unless $id;
		my $backup = Tab::Person->retrieve($id);
		push @backup_followers, $backup;
	}

	my $districts = $tourn_settings->{"nsda_district"};

</%init>

	<div class="main">

        <h2><% $event->name %></h2>

		<&
			"tabbar.mas",
			person          => $person,
			person_settings => $person_settings,
			event           => $event,
			tourn           => $tourn,
			whoami          => "follow",
			tourn_settings  => $tourn_settings,
			districts       => $districts
		&>

%		my $auto_backups = $event->setting("auto_backups");

		<h4>Status Texts for <% $event->abbr %></h4>

		<p>
			Follow an event to receive text messages or emails when an event's
			first and last ballot are entered &amp; confirmed.
		</p>

%		foreach my $follower (@followers) {

%			next unless $follower;

			<div class="row">
				<span class="third">
					<% $follower->first." ".$follower->last %>
				</span>

				<span class="third">
					<% $follower->email %>
				</span>

				<span class="third centeralign">
					<a
						class = "redtext buttonwhite fa fa-trash"
						href  = "follower_rm.mhtml?follower_id=<% $follower->id %>&event_id=<% $event->id %>"
					>
					</a>
				</span>
			</div>
%		}

		<form
			action = "follower_add.mhtml"
			method = "post"
		>

			<input
				type  = "hidden"
				name  = "event_id"
				value = "<% $event->id %>"
			>

			<div class="liblrow">
				<span class="third semibold bigger bluetext">
					Add follower
				</span>
				<span class="third centeralign">
					<input
						type        = "text"
						name        = "username"
						size        = "30"
						placeholder = "Enter username..."
					>
				</span>
				<span class="third centeralign">
					<input
						type  = "submit"
						value = "Add Follower"
					>
				</span>
			</div>
		</form>

		<h4 class="martopmore">Auto-Backups</h4>

		<p>
			Enter emails to receive automatic backups of a round's data when
			the round is 1) auto-blasted, 2) dumped/deleted or 3) when the last
			ballot is entered.
		</p>

%		foreach my $backup (@backup_followers) {
%			next unless $backup;

			<div class="row">
				<span class="third">
					<% $backup->first." ".$backup->last %>
				</span>

				<span class="third">
					<% $backup->email %>
				</span>

				<span class="third centeralign">
					<a
						class = "redtext buttonwhite fa fa-trash"
						href  = "backup_rm.mhtml?backup_id=<% $backup->id %>&event_id=<% $event->id %>"
					>
					</a>
				</span>
			</div>

%		}

		<form
			action="backup_add.mhtml"
			method="post"
		>

		<input
			type  = "hidden"
			name  = "event_id"
			value = "<% $event->id %>"
		>

		<div class="liblrow">
			<span class="third semibold bigger bluetext">
				Add backup
			</span>
			<span class="third centeralign">
				<input
					type        = "text"
					name        = "username"
					size        = "30"
					placeholder = "Enter username..."
				>
			</span>

			<span class="third centeralign">
				<input
					type  = "submit"
					value = "Add Backup Recipient"
				>
			</span>
		</div>

		</form>

<%perl>
		my $tourn_follows = $tourn_settings->{"backup_followers"};
		my @tourn_followers;

		my @already = eval {
			return @{$tourn_follows};
		};

		foreach my $tf (@already) {
			next unless $tf;
			my $follower = Tab::Person->retrieve($tf);
			if ($follower) {
				push @tourn_followers, $follower;
			}
		}

</%perl>

		<div class="full martopmuchmore nospace ltbordertop">

			<span class="threequarters nospace">
				<h4>Tournament Backup Followers</h4>
			</span>
			<span class="quarter rightalign nospace">
				<a href="/setup/tourn/backups.mhtml" class="greentext buttonwhite invert thin">
					Tourn-Wide Backups
				</a>
			</span>
		</div>

%		if (@tourn_followers) {

			<p>
				The following users are already getting backups on a tournament-wide basis.
			</p>

%			foreach my $follower (@tourn_followers) {
%				next unless $follower > 0;

				<div class="row">
					<span class="third">
						<% $follower->first." ".$follower->last %>
					</span>

					<span class="third">
						<% $follower->email %>
					</span>

					<span class="third centeralign">
						<a
							class = "bluetext buttonwhite fa fa-lg fa-link"
							href  = "/setup/tourn/backups.mhtml"
						></a>
					</span>

				</div>
%			}
%		}

	</div>

	<div class="menu">
		<&
			"menu.mas",
			tourn          => $tourn,
			perms          => $perms,
			tourn_settings => $tourn_settings,
			person         => $person,
			whoami         => "follow",
			districts      => $districts,
			event_id       => ($event) ? $event->id : ""
		&>
	</div>
