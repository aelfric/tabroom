<%args>
	$tourn
	$perms
	$tourn_settings
	$person
	$person_settings
</%args>
<%init>

	$m->abort if $perms->{"by_event"} || $perms->{"checker"};

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	my $follower_ids = $tourn_settings->{"backup_followers"};
	my @followers;

	foreach my $id (split(/,/, $follower_ids)) {
		next unless $id;
		my $follower = Tab::Person->retrieve($id);
		push @followers, $follower;
	}

    my %links = (
		"overall"  => "access.mhtml",
		"by_event" => "event_access.mhtml",
		"backups"  => "backups.mhtml"
	);

</%init>

	<div class="main">

		<h3><% $tourn->name %></h3>

		<& "tabbar.mas",
			tourn          => $tourn,
			tourn_settings => $tourn_settings,
			whoami         => "access"
		&>

		<div class='full nospace'>
			<span class="half">
				<h4>Auto-Backup Emails</h4>
			</span>

			<span class="third centeralign">
				<&
					"/funclib/tabs.mas",
						links   => \%links,
						default => "backups",
						center  => "yes",
						buttons => "yes"
				&>
			</span>
		</div>

		<p>
			The following users will get auto backups from all events and divisions. Note,
			if you have a lot of events, this can generate a TON of emails.  Be sure to put a
			filtering mechanism in place first, or be deluged.
		</p>

%		foreach my $follower (@followers) {

%			next unless $follower;

			<div class="row">

				<span class="third">
					<% $follower->first." ".$follower->last %>
				</span>

				<span class="third">
					<% $follower->email %>
				</span>

				<span class="third centeralign">
					<a
						class = "redtext buttonwhite fa fa-lg fa-trash"
						href  = "backup_rm.mhtml?follower_id=<% $follower->id %>"
					>
					</a>
				</span>

			</div>

%		}

		<form action="backup_add.mhtml" method="post">

		<div class="liblrow">
			<span class="third">
				Add follower:
			</span>
			<span class="third centeralign">
				<input
					type        = "text"
					name        = "username"
					size        = "30"
					placeholder = "Enter username..."
				>
			</span>
			<span class="third centeralign">
				<input
					type  = "submit"
					value = "Add Follower"
				>
			</span>
		</div>

		</form>

	</div>

	<div class="menu">

	</div>

