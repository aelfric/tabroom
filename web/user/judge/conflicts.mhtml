					<span class="fifth centeralign nospace">
						<input
							type  = "submit"
							value = "Search"
						>
					</span>
				</div>
			</form>

%			if ($persons || $chapters) {

				<h5 class="button martopmore">Search Results</h5>

%				if ($persons) {

