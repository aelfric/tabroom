<%args>
	$now
	$person
	$person_settings
</%args>
<%init>

	my $then = $now->clone();
	$then->subtract(days => 1);

	if (
		(not defined $person_settings->{learn_sync})
		|| $person_settings->{learn_sync} < $then
	) {

		$m->comp("/funclib/nsda/sync_learn.mas", no_refresh => 1);
		$person->setting("learn_sync", "date", $now);
	}

	$m->call_next();

</%init>
