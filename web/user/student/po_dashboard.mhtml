<%args>
	$chamber_id
	$person
</%args>
<%init>

	my $chamber = Tab::Panel->retrieve($chamber_id);


	my $dbh = Tab::DBI->db_Main();

	my $sth = $dbh->prepare("
		select
			entry.id, entry.code, entry.name, ballot.speakerorder recency, sort_p.value show_recency
		from (entry, ballot)
			left join event_setting sort_p on sort_p.event = entry.event and sort_p.tag = 'sort_precendence'
		where entry.active = 1
			and entry.id = ballot.entry
			and ballot.panel = ?
			and NOT EXISTS (
				select score.id
				from score
				where score.ballot = ballot.id
				and score.tag = 'po'
			)
		group by entry.id
		order by ballot.speakerorder
	");

	$sth->execute($chamber->id);

	my $entries = $sth->fetchall_hash();
	$sth->finish();


	my $show_recency;

	foreach my $ref (

	if ($entries) {
		$show_recency = ${$entries}[0]->{"show_recency"};
	}

	my @tabs = ();

	if ($show_recency) {
		push @tabs, "recency";
	}
	push @tabs, 'seating';

</%init>

	<div class="main">

		<span class="half">
			<h4><% $chamber->round->realname %></h4>
		</span>

		<span class="half rightalign">
			<h4>Chamber <% $chamber->letter %></h4>
		</span>

		<& "/funclib/tabs.mas",
			tabs    => \@tabs,
			default => "recency"
		&>

		<& "/funclib/tablesorter.mas", table => 'recency_list' &>

		<span class="full screens" id="recency">

			<span class="half nospace">
				<h4>Initial Recency</h4>
			</span>

			<span class="half rightalign" id="recency_list_buttonarea">
			</span>

			<table id="recency_list">

				<thead>
					<tr class="yellowrow smallish">
						<th>
							Entry
						</th>

						<th>
							Full Name
						</th>

						<th>
							Initial Recency
						</th>
					</tr>
				</thead>

				<tbody>
%					foreach my $ref (@{$entries}) {
						<tr>
							<td>
								<% $ref->{'code'} %>
							</td>
							<td>
								<% $ref->{'name'} %>
							</td>
							<td class="centeralign">
								<% $ref->{'recency'} %>
							</td>
						</tr>
%					}
				</tbody>
			</table>
		</span>

		<span class="full screens" id="seating">
			<& "/funclib/seating_chart.mas",
				person => $person,
				panel  => $chamber,
				chair  => 1,
				dbh    => $dbh
			&>
		</span>

	</div>
