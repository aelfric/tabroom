<%args>
	$person
	$person_settings
	$student_id => undef
	$chapter_id => undef
	$first      => undef
	$middle     => undef
	$last       => undef
</%args>
<%init>

	my $tz = $person->tz if $person;
	$tz = "UTC" unless $tz;

	my $student = Tab::Student->retrieve($student_id) if $student_id;

	my $chapter;

	if ($chapter_id) {
		$chapter = Tab::Chapter->retrieve($chapter_id) if $chapter_id;
	} elsif ($student) {
		$chapter = $student->chapter;
	}

	unless ($chapter) {
		$m->comp("/funclib/abort.mas", message => "No valid school ID sent: $chapter_id does not exist");
	}

	my %student_settings;

	if ($student) {
		%student_settings = $student->all_settings() if $student;
		$chapter = $student->chapter;
	}

	my %genders = (
		f => "Female",
		m => "Male",
		n => "Non-Binary",
		o => "Other",
		x => "Prefer not to Answer"
	);

	my $membership = $m->comp("/funclib/nsda/membership.mas", student => $student);

</%init>

	<div class="main">

		<h2><% $chapter->name %> Competitors</h2>

        <& tabbar.mas,
			chapter => $chapter,
			person  => $person,
			whoami  => "students"
		&>

		<span class="half padvertno marvertno">
			<h4><% $student ? $student->first." ".$student->last : "Add Student" %></h4>
		</span>

		<span class="half rightalign nospace">
%			if ($student && $student->person > 0) {
				<span class="ninetenths" title="Linked to Tabroom Account">
					Linked to
					<span class="inline bluetext semibold">
						<span class='quarterspacer'></span>
						<% $student->person->first %> <% $student->person->last %>
						<span class='quarterspacer'></span>
						(<% $student->person->email %>)
						<span class='quarterspacer'></span>
					</span>
				</span>

				<span class="rightalign twenty">
					<a
						class = "fa fa-sm fa-chain-broken redtext buttonwhite invert"
						href  = "student_unlink.mhtml?student_id=<% $student->id %>"
						title = "Undo link to competitor"
					></a>
				</span>

%			} else {

				<form
					action = "student_search.mhtml"
					method = "post"
				>

					<input
						type  = "hidden"
						name  = "chapter_id"
						value = "<% $chapter->id %>"
					>

					<input
						type  = "hidden"
						name  = "student_id"
						value = "<% $student_id %>"
					>

					<span class="eighth semibold bluetext nospace rightalign">
						Link to
						<span class="halfspacer"></span>
					</span>

					<span class="seventenths centeralign nospace">
						<input
							type        = "email"
							name        = "student_email"
							placeholder = "Email address of Tabroom account"
							size        = "48"
						>
					</span>

					<span class="tenth rightalign nospace">
						<button
							type     = "submit"
							class    = "notfirst fa fa-link buttonwhite bluetext"
							tabindex = "-1"
						></button>
					</span>
				</form>
%			}
		</span>

		<form
			action="student_save.mhtml"
			method="post"
		>

		<input
			type  = "hidden"
			name  = "student_id"
			value = "<% $student %>"
		>

		<input
			type  = "hidden"
			name  = "chapter_id"
			value = "<% $chapter->id %>"
		>

		<span class="pagehalf">

			<div class="row">
				<span class="third semibold">
					<span class="quarterspacer"></span>
					First Name
				</span>
				<span class='twothirds'>
					<input
						type  = "text"
						name  = "first"
						size  = "32"
						value = "<% ($student) ? $student->first : $first %>"
					>
				</span>
			</div>

			<div class="row">
				<span class="third semibold">
					<span class="quarterspacer"></span>
					Middle Name
				</span>
				<span class='twothirds'>
					<input
						type  = "text"
						name  = "middle"
						size  = "32"
						value = "<% ($student) ? $student->middle : $middle %>"
					>
				</span>
			</div>

			<div class="row">
				<span class="third semibold">
					<span class="quarterspacer"></span>
					Last Name
				</span>
				<span class='twothirds'>
					<input
						type  = "text"
						name  = "last"
						size  = "32"
						value = "<% ($student) ? $student->last : $last %>"
					>
				</span>
			</div>

			<div class="row">
				<span class="third semibold">
					<span class="quarterspacer"></span>
					Gender
				</span>

				<span class="twothirds">
					<select name="gender">
						<option value=""></option>
%						foreach my $key (sort {$a cmp $b} keys %genders) {
							<option value="<% uc($key) %>"
								<% $student && uc($key) eq $student->gender ? "selected" : "" %>
							><% $genders{$key} %></option>
%						}
					</select>
				</span>
			</div>
		</span>

		<span class="pagehalf">
%			if ($person->site_admin || $person_settings->{"nsda_admin"}) {
				<div class="row">
					<span class="third semibold">
						<span class="quarterspacer"></span>
						NSDA ID
					</span>
					<span class='twothirds'>
						<input
							type  = "text"
							name  = "nsda"
							size  = "32"
							value = "<% $student ? $student->nsda : "" %>"
						>
					</span>
				</div>
%			} elsif ($student && $student->nsda) {
				<div class="row">
					<span class="third semibold">
						NSDA ID
					</span>
					<span class='twothirds settings semibold bluetext'>
						#<% $student ? $student->nsda : "" %>
					</span>
				</div>
%			}

			<div class="row">
				<span class="third semibold">
					<span class="quarterspacer"></span>
					Phonetic Guide
				</span>

				<span class='twothirds'>
					<input
						type  = "text"
						name  = "phonetic"
						size  = "32"
						value = "<% ($student) ? $student->phonetic : ""%>"
					>
				</span>
			</div>

			<div class="row">
				<span class="third semibold">
					<span class="quarterspacer"></span>
					Grad Year
				</span>
				<span class='twothirds'>
					<input
						type  = "number"
						name  = "grad_year"
						min   = "1900"
						max   = "2100"
						value = "<% $student ? $student->grad_year : "" %>"
					>
				</span>
			</div>

			<div class="row settings fixedheight">
				<span class="third semibold padtop">
					<span class="quarterspacer"></span>
					Novice
				</span>
				<label for="n">
					<span class="twothirds nospace hover padtopless martopless">
						<span class="halfspacer"></span>
						<input
							type  = "checkbox"
							name  = "novice"
							id    = "n"
							value = "1"
							<% ($student) ?  ($student->novice) ? 'checked' : '': "" %> >
					</span>
				</label>
			</div>
		</span>

		<div class="liblrow pagefull rightalign">
			<span class="third centeralign">
				<input
					type  = "submit"
					name  = "twitch"
					value = "Save Student Info"
				>
			</span>
		</div>

		</form>

		<div class="full martopmore">
			<h5>Parent notifications</h5>
		</span>

		<p class="biggish explain">
			Parents will be notified, and sent tournament messages/memos, when
			a competitor signs up for a tournament.  Notifications do not get
			automatically sent if a coach/team admin registers a competitor,
			but they will get emails/information you send out afterwards.
		</p>

		<p class="biggish explain">
			Parent followers need their own verified Tabroom.com accounts.
		</p>
<%perl>
		if ($student) {
			foreach my $follower ($student->followers) {

				my $parent = $follower->person();

				unless ($parent) {
					$follower->delete();
					next;
				}
</%perl>

				<div
					class = "row full marno"
					id    = "<% $follower->id %>"
				>

					<span class="threetenths">
						<span class="halfspacer"></span>
						<% $parent->first." ".$parent->last %>
					</span>

					<span class="threetenths">
						<a
							href="mailto:<% $parent->email %>"
							class="plain semibold bluetext hover"
						><% $parent->email %></a>
					</span>

					<span class="threetenths">
						<% Tab::phone($parent->phone) %>
					</span>

					<span class="tenth centeralign nospace">
%						my $warn = "This email will no longer be notified of tournament information for this competitor.  Are you sure?";
						<a
							id            = "<% $follower->id %>"
							target_id     = "<% $follower->id %>"
							on_success    = "destroy"
							onClick       = "postConfirm('<% $warn %>', this, 'unfollow.mhtml');"
							class         = "buttonwhite padless fa fa-trash redtext hover"
							title         = "Unfollow"
						>
						</a>
					</span>
				</div>
%			}
%		}

			<form
				action = "follow.mhtml"
				method = "post"
			>

			<input
				type  = "hidden"
				name  = "student_id"
				value = "<% $student %>"
			>

			<div class="libl full centeralign biggish">

				<span class="tenth semibold">
					Add
				</span>
				<span class="fourfifths">
					<input
						type        = "email"
						name        = "parent_email"
						size        = "24"
						placeholder = "Email address"
					>
				</span>

				<span class="tenth centeralign">
					<input
						type  = "submit"
						class = "thin"
						value = "Add"
					>
				</span>
			</div>

			</form>
		</div>
	</div>

	<div class="menu">

		<div class="sidenote bigger">
			<a class="blue full"
				href="student_edit.mhtml?chapter_id=<% $chapter->id %>">
				Add another student
			</a>

			<a class="blue full"
				href="students.mhtml?chapter_id=<% $chapter->id %>">
				Return to student roster
			</a>
		</div>

<%perl>

		if ($chapter->nsda > 0 ) {

			my $chapter_nsda_id = $chapter->nsda;

			if ($membership) {
</%perl>
				<div class="sidenote bigger">

					<div class="blueborderbottom padbottom">
						<span class="threequarters">
							<h4>NSDA Membership</h4>
						</span>
						<span class="quarter rightalign">
							<img src="/lib/images/sparky.png" alt="NSDA Sparky Logo">
						</span>
					</div>

%						if ($membership->{'degree_name'}) {
							<div class="centeralign semibold biggish padvert orangetext italic">
								Degree of
								<% $membership->{'degree_name'} %>
							</div>
%						}
%						if ($membership->{'aaa'}) {
							<div class="centeralign semibold biggish padvert redtext italic">
								Academic All-American
							</div>
%						}

						<div class="full row marno padvertless smallish">
							<span class="half semibold bluetext">
								Full Name
							</span>

							<span class="half">
								<% $membership->{'first'} %>
								<% $membership->{'middle'} %>
								<% $membership->{'last'} %>
								<span class="quarterspacer"></span>
							</span>
						</div>


						<div class="full row marno padvertless smallish">
							<span class="half semibold bluetext">
								Member ID
							</span>

							<span class="half">
								#<% $membership->{'person_id'} %>
							</span>
						</div>

						<div class="full row marno padvertless smallish">
							<span class="half semibold bluetext">
								Points
							</span>

							<span class="half">
								<% $membership->{'points'} %>
							</span>
						</div>

%						if ($chapter->level eq "middle") {
							<div class="full row marno padvertless smallish">
								<span class="half semibold bluetext">
									Paid Member
								</span>

								<span class="half">
									<% $student_settings{"nsda_paid"} ? "Y" : "N" %>
								</span>
							</div>

%						} elsif ($membership->{'districts_eligible'}) {
							<div class="full row marno padvertless smallish">
								<span class="half semibold bluetext">
									Districts Eligible?
								</span>

								<span
									class="half leftalign fa fa-sm
									<% $membership->{'districts_eligible'}
										? "fa-check greentext"
										: "fa-times redtext"
									%>"
								></span>
							</div>
%						} else {
							<div class="full row marno padvertless smallish">
								<span class="half semibold bluetext">
									Status
								</span>

								<span class="half">
									Inactive/Graduate
								</span>
							</div>

%						}

						<div class="full row marno padvertless smallish">
							<span class="half semibold bluetext">
								Last Points
							</span>

							<span class="half">
								<& "/funclib/showdate.mas",
									string => $membership->{'last_points_entry'},
									tz     => $person->tz,
									length => "murica_short"
								&>
							</span>
						</div>
				</div>

%			}
%		}


	</div>

