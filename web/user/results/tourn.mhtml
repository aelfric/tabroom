<%args>
	$school
	$person
	$event_id => undef
</%args>
<%init>

	my $tourn = $school->tourn;

	my $dbh = Tab::DBI->db_Main();

	my $sth = $dbh->prepare("
        select
            count(distinct school.chapter),
            count(distinct entry.id),
            count(distinct es.student),
            count(distinct entry.event),
            count(distinct chapter.state),
			count(distinct ballot.judge)
        from
            (tourn, school, entry, entry_student es, chapter, ballot)

        where tourn.id = ?
            and tourn.id = school.tourn
            and school.id = entry.school
            and entry.active = 1
            and entry.id = es.entry
            and school.chapter = chapter.id
			and ballot.entry = entry.id
	");

	$sth->execute($tourn->id);

	my ($school_count, $entry_count, $student_count, $event_count, $state_count, $judge_count) = $sth->fetchrow_array();

	$sth->finish();
	$dbh->disconnect();

</%init>

	<& "menu.mas",
		event_id => $event_id,
		school   => $school,
		whoami   => "stats"
	&>

	<div class="main">

		<h2><% $school->name %>: Results</h2>

		<& "/user/chapter/tabbar.mas",
			chapter => $school->chapter,
			person  => $person,
			whoami => "results"
		&>

		<h3 class="normalweight centeralign padtopmore">
			<% $tourn->name %>
		</h3>

		<div class="half center padtop">

			<h5 class="centeralign semibold">
				Statistics
			</h5>

			<table>
				<tr class="row">
					<td>
						Schools
					</td>

					<td class="rightalign">
						<% $school_count %>
					</td>
				</tr>

				<tr class="row">
					<td>
						Entries
					</td>

					<td class="rightalign">
						<% $entry_count %>
					</td>
				</tr>

				<tr class="row">
					<td>
						Individual Competitors
					</td>

					<td class="rightalign">
						<% $student_count %>
					</td>
				</tr>

				<tr class="row">
					<td>
						Judges
					</td>

					<td class="rightalign">
						<% $judge_count %>
					</td>
				</tr>

				<tr class="row">
					<td>
						States
					</td>

					<td class="rightalign">
						<% $state_count %>
					</td>
				</tr>

				<tr class="row">
					<td>
						Events/Divisions
					</td>

					<td class="rightalign">
						<% $event_count %>
					</td>
				</tr>
			</table>
		</div>
	</div>

