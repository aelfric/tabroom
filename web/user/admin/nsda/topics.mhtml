<%args>
	$person
	$person_settings
	$school_year => undef
</%args>
<%init>

	my $now = DateTime->now();

	my $now_year = $now->year;
	$now_year = $now_year - 1 if $now->month < 7;

	$school_year = $now_year unless $school_year;

	my @sources = ("NSDA", "NFHS", "NCFL", "CEDA", "NFA", "CPFL");
	my @events = ("LD", "PF", "Policy");

	Tab::Topic->set_sql( existing => "
		select * from topic
		where topic.school_year = ?
		order by topic.school_year, topic.event_type, topic.sort_order
	");

	my @topics = Tab::Topic->search_existing($school_year);

	Tab::Topic->set_sql( earliest => "
		select min(school_year) from topic
	");

	my $start = Tab::Topic->sql_earliest->select_val();

</%init>

	<script>
		function toggleAdd () {
			$("#add_form").toggleClass('hidden');
			$("#noclickmask").toggleClass('hidden');
			$("#toggleSign").toggleClass('invert');
		}
	</script>

	<div class="blankfull">

		<span class="half nospace">
			<h4>Debate Topics</h4>
		</span>

		<span class="eighth nospace rightalign semibold bluetext">
			School Year Beginning
			<span class="halfspacer"></span>
		</span>

		<span class="tenth nospace semibold bluetext">

			<form
				action = "topics.mhtml"
				method = "post"
			>

			<select
				name     = "school_year"
				class    = "fixedmost"
				onChange = "this.form.submit();"
			>
%				foreach my $year ($start .. ($now->year + 3)) {
					<option
						value="<% $year %>"
						<% $school_year == $year ? "selected" : "" %>
					><% $year %></option>
%				}
			</select>

			</form>
		</span>

		<span class="fifth centeralign">
			<a
				href  = "topic_report.mhtml?school_year=<% $school_year %>"
				class = "buttonwhite bluetext invert"
			>Competitive Report</a>
		</span>

		<span
			id    = "topics_buttonarea"
			class = "tenth nospace rightalign notmask"
		>
			<a
				onClick="toggleAdd()"
				id="toggleSign"
				class="fa fa-sm fa-plus buttonwhite bluetext"
			></a>
		</span>

		<& "/funclib/tablesorter.mas", table => "topics" &>

		<table id="topics">

			<thead>

				<tr class="yellowrow smallish">

					<th>
						League
					</th>

					<th>
						Event
					</th>

					<th>
						Tag
					</th>

					<th>
						School Year
					</th>

					<th>
						Sort Order
					</th>

					<th>
						Text
					</th>

					<th>
					</th>

				</tr>

			</thead>

			<tbody>

%				foreach my $topic (@topics) {

					<form
						action = "topic_save.mhtml"
						method = "post"
					>

					<input
						type  = "hidden"
						name  = "topic_id"
						value = "<% $topic->id %>"
					>

					<tr>

						<td>
							<span class="invisible"><% $topic->source %></span>

							<select
								name  = "source"
								class = "fixedtiny"
							>
								<option value="">None</option>
%								foreach my $source (@sources) {
									<option
										value="<% $source %>"
										<% $source eq $topic->source ? "selected" : "" %>
									><% $source %></option>
%								}
							</select>
						</td>

						<td>
							<span class="invisible"><% $topic->event_type %></span>

							<select
								name  = "event_type"
								class = "fixedtiny"
							>
								<option value="">None</option>
%								foreach my $event (@events) {
									<option
										value="<% $event %>"
										<% $event eq $topic->event_type ? "selected" : "" %>
									><% $event %></option>
%								}

							</select>
						</td>

						<td>
							<span class="invisible"><% $topic->tag %></span>
							<input
								type  = "text"
								name  = "tag"
								size  = 32
								value = "<% $topic->tag %>"
							>
						</td>

						<td>
							<span class="invisible"><% $topic->school_year %></span>
							<input
								type  = "number"
								name  = "school_year"
								size  = 32
								value = "<% $topic->school_year %>"
							>
						</td>

						<td class='centeralign'>
							<span class="invisible"><% $topic->sort_order %></span>
							<input
								id    = "<% $topic->id %>_sort_order"
								type  = "number"
								size  = "8"
								name  = "sort_order"
								value = "<% $topic->sort_order %>"
							>
						</td>

						<td class='centeralign'>
							<textarea name="topic_text" rows="2" cols="64"><% $topic->topic_text %></textarea>
						</td>

						<td class="centeralign">
							<button class="buttonwhite bluetext invert fa fa-lg fa-save"></button>
						</td>

						</form>

					</tr>
%				}

			</tbody>

		</table>

		<div id="add_form" class="sideoverlay hidden notmask">

			<span class="closebox">
				<a
					onClick = "toggleAdd()"
					id      = "toggleSign"
					class   = "fa fa-lg fa-times buttonwhite redtext invert hover"
				></a>
			</span>

			<h4>Add New Topic</h4>

			<form
				action   = "quiz_upload.mhtml"
				method   = "post"
				onsubmit = "return uploadThis();"
				enctype  = "multipart/form-data"
			>

				<div class="row">
					<span class="third semibold">
						Source League
					</span>
					<span class="twothirds">

						<select
							name  = "source"
							class = "fixedtiny"
						>
							<option value="">None</option>
%							foreach my $source (@sources) {
								<option
									value="<% $source %>"
								><% $source %></option>
%							}
						</select>
					</span>
				</div>

				<div class="row">
					<span class="third semibold">
						Event Type:
					</span>
					<span class="twothirds">
						<select
							name  = "event_type"
							class = "fixedtiny"
						>
							<option value="">None</option>
%							foreach my $event (@events) {
								<option
									value="<% $event %>"
								><% $event %></option>
%							}
						</select>
					</span>
				</div>

				<div class="row">
					<span class="third semibold">
						Tag (Nov/Dec, etc)
					</span>
					<span class="twothirds">
						<input
							type  = "text"
							name  = "tag"
							id    = "tag"
							size  = "32"
						>
					</span>
				</div>

				<div class="row">
					<span class="third semibold">
						School Year
					</span>
					<span class="twothirds">
						<input
							type  = "number"
							name  = "school_year"
							id    = "school_year"
							size  = "16"
							value = "<% $now_year %>"
						>
					</span>
				</div>

				<div class="row">
					<span class="third semibold">
						Sort Order
					</span>
					<span class="twothirds">
						<input
							type  = "number"
							name  = "sort_order"
							id    = "sort_order"
							size  = "16"
						>
					</span>
				</div>

				<div class="row">
					<span class="third semibold">
						Topic Text
					</span>
					<span class="twothirds">
						<textarea name="topic_text" rows="3" cols="64"></textarea>
					</span>
				</div>
				<div class="libl row rightalign">
					<input type="submit" value="Save Topic">
				</div>

			</form>
		</div>

	</div>

	<div id="noclickmask" class="hidden"></div>
