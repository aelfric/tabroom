					<% $ARGS{"nsda"} %>
					<% $ARGS{"nces"} %>
					<% $ARGS{"ceeb"} %>
				</span>
				<span class="tenth rightalign" id="chapters_buttonarea">
				</span>
			</div>

			<& "/funclib/tablesorter.mas", table => "chapters" &>

			<table id="chapters">
