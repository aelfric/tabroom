					$flip_status eq "anyone"
					|| ($flip_status eq "winner" && $flip_winner == $entry_id)
					|| ($flip_status eq "loser" && ($flip_winner != $entry_id))
				) {


					my $function;

					if ($days > 0 || $hours > 0 || $seconds > 0) {
						$function = "pullUrl('/api/flip_monitor.mhtml', 'location.reload();')";
					}

</%perl>
