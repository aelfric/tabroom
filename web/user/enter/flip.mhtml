					if ($time_left) {
						$time_left->add(seconds => 2);
					}

					my $function;

					if ($days > 0 || $hours > 0 || $seconds > 0) {
						$function = "location.reload();";
					}
</%perl>
					<div
						id    = "<% $entry_id %>_side"
						class = "padvertless row <% $entry_id %>"
					>

						<span class="seventh marleftmore padleft semibold rightalign">
						</span>

