<%perl>

    sub money {

		my ($number, $symbol) = @_;
		my $negative++ if $number < 0;
      	$number = sprintf("%.2f", $number);

		if ($symbol eq '$' || not defined $symbol) {
			1 while $number =~ s/^(-?\d+)(\d\d\d)/$1,$2/;
		} else {
			1 while $number =~ s/^(-?\d+)(\d\d\d)/$1.$2/;
		}

		$number = "(".$number.")" if $negative;
		$number = $number."&nbsp;" unless $negative;
      	return $number;
    }

</%perl>
