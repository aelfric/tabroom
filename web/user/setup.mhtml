<%args>
	$person
	$person_settings
	$session
</%args>

	<& "/user/menu.mas",
		person          => $person,
		person_settings => $person_settings
	&>

	<& "/funclib/push_notifications.mas",
		person          => $person,
		person_settings => $person_settings
	&>

	<div class="main">

		<h1 class="centeralign">
			Welcome to Tabroom
		</h1>

		<div class="full centeralign nospace">

			<div class="fourfifths nospace">
				<h6 class="normalweight centeralign bluetext martopmore marbottommore">
					<span class="inline redtext">New to Tabroom?</span>
					The <span class="inline fa fa-sm fa-question-circle "></span> icon
					at the top right links to the manual <span class="inline-block bluetext fa fa-sm fa-arrow-up fa-rotate-45"></span>
				</h6>
			</div>
		</div>

		<div class="fivesixths nospace automargin martopmore">

			<h5 class="martopmore">
				Are you a coach or program director?
			</h5>

			<div class="row padno">

				<span class="twothirds marno semibold">
					<span class="halfspacer"></span>
					To register online for tournaments
				</span>

				<span class="twofifths centeralign padvert">

					<a class = "buttonwhite bluetext invert seveneighths"
						href = "chapter/create.mhtml"
					>
						Create your institution
					</a>
				</span>

			</div>

			<div class="row padno">

				<span class="twothirds marno semibold">
					<span class="halfspacer"></span>
					To manage and host your own tournament with Tabroom
				</span>

				<span class="twofifths centeralign padvert">

					<a class = "buttonwhite bluetext invert seveneighths"
						href = "tourn/request.mhtml"
					>
						Create tournament
					</a>
				</span>

			</div>

			<h5 class="martopmore">
				How about a judge?
			</h5>

			<div class="row padno">

				<span class="twothirds marno semibold">
					<span class="halfspacer"></span>
					To enter online ballots and get emails or text pairings
				</span>

				<span class="twofifths centeralign padvert">

					<a class = "buttonwhite bluetext invert seveneighths"
						href = "judge/search.mhtml"
					>
						Link your account
					</a>
				</span>

			</div>

			<h5 class="martopmore">
				Or are you a competitor?
			</h5>

			<div class="row padno">

				<span class="twothirds marno semibold">
					<span class="halfspacer"></span>
					Sign up for tournaments, get emails &amp; text pairings
				</span>

				<span class="twofifths centeralign padvert">
					<a class="buttonwhite bluetext invert seveneighths"
						href="student/search.mhtml"
					>
						Link your account
					</a>
				</span>

			</div>

		</div>

	</div>
