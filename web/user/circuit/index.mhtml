<%args>
	$person
	$circuit_id => undef
</%args>
<%init>

	my $circuit = Tab::Circuit->retrieve($circuit_id) if $circuit_id;
	$m->abort unless $circuit;

	my %circuit_settings = $circuit->all_settings() if $circuit;

	my $switch;

	my $tz = $circuit->tz if $circuit;
	$tz = "UTC" unless $tz;

</%init>

	<& menu.mas,
		circuit => $circuit,
		whoami  => "edit"
	&>

	<div class="main">

		<h2>
			<% $circuit->name  %>
		</h2>

		<h4>Settings & Name</h4>

		<form
			action = "circuit_save.mhtml"
			method = "post"
		>

			<input
				type  = "hidden"
				name  = "circuit_id"
				value = "<% $circuit_id %>"
			>

		<span class="pagehalf settings">
			<div class="row">
				<span class="third">
					Full Name
				</span>

				<span class="twothird ">
					<input
						type  = "text"
						size  = "32"
						name  = "name"
						value = "<% ($circuit) ? $circuit->name : "" %>"
					>
				</span>
			</div>

			<div class="row">
				<span class="third ">
					Abbreviation
				</span>

				<span class="twothirds">
					<input
						type  = "text"
						size  = "32"
						name  = "abbr"
						value = "<% ($circuit) ? $circuit->abbr : "" %>"
					>
				</span>
			</div>

			<div class="row">
				<span class="third ">
					State/Province
				</span>

				<span class="twothirds">
					<select name="state" class="fixedmost">
						<option value="">None</option>
						<&
							"/funclib/state_select.mas",
							state => $circuit ? $circuit->state : ""
						&>
					</select>
				</span>
			</div>

			<div class="row">
				<span class="third">
					Country
				</span>

				<span class="twothirds">
					<select name="country" class="fixedmost">
						<option value="">None</option>
						<& "/funclib/country_select.mas",
							country => $circuit ? $circuit->country : ""
						&>
					</select>
				</span>
			</div>

			<div class="row">
				<span class="third ">
					Website
				</span>
				<span class="twothirds">
					<input
						type  = "text"
						size  = "25"
						name  = "url"
						value = "<% $circuit_settings{'url'} %>"
					>
				</span>
			</div>

			<div class="row">
				<span class="third ">
					Timezone:
				</span>
				<span class="twothirds">
					<select name="timezone" class="fixedmost">
						<& "/funclib/timezones.mas", tz => $tz &>
					</select>
				</span>
			</div>

		</span>

