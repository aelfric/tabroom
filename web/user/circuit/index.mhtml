<%args>
	$person
	$circuit
</%args>
<%init>

	my %circuit_settings = $circuit->all_settings() if $circuit;

	my $tz = $circuit->tz if $circuit;
	$tz = "UTC" unless $tz;

</%init>

	<& menu.mas,
		circuit => $circuit,
		whoami  => "edit"
	&>

	<div class="main">

		<span class="half nospace">
			<h4>
				<% $circuit->name  %>
			</h4>
		</span>
		<span class="half nospace rightalign">
			<h6>Circuit Setup</h6>
		</span>

		<form
			action = "circuit_save.mhtml"
			method = "post"
		>

			<input
				type  = "hidden"
				name  = "circuit_id"
				value = "<% $circuit->id %>"
			>

		<span class="pagehalf settings">
			<div class="row">
				<span class="third">
					Full Name
				</span>

				<span class="twothird ">
					<input
						type  = "text"
						size  = "32"
						name  = "name"
						value = "<% $circuit->name %>"
					>
				</span>
			</div>

			<div class="row">
				<span class="third ">
					Abbreviation
				</span>

				<span class="twothirds">
					<input
						type  = "text"
						size  = "32"
						name  = "abbr"
						value = "<% $circuit->abbr %>"
					>
				</span>
			</div>

			<div class="row">
				<span class="third ">
					State/Province
				</span>

				<span class="twothirds">
					<select name="state" class="fixedmost">
						<option value="">None</option>
						<&
							"/funclib/state_select.mas",
							state => $circuit->state
						&>
					</select>
				</span>
			</div>

			<div class="row">
				<span class="third">
					Country
				</span>

				<span class="twothirds">
					<select name="country" class="fixedmost">
						<option value="">None</option>
						<& "/funclib/country_select.mas",
							country => $circuit->country
						&>
					</select>
				</span>
			</div>

			<div class="row">
				<span class="third ">
					Website
				</span>
				<span class="twothirds">
					<input
						type  = "text"
						size  = "25"
						name  = "url"
						value = "<% $circuit_settings{'url'} %>"
					>
				</span>
			</div>

			<div class="row">
				<span class="third ">
					Timezone:
				</span>
				<span class="twothirds">
					<select name="timezone" class="fixedmost">
						<& "/funclib/timezones.mas", tz => $tz &>
					</select>
				</span>
			</div>

		</span>

