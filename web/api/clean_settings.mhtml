<%init>

	my $dbh = Tab::DBI->db_Main();

	my %results;

	$m->clear_buffer();
	$r->content_type('text/plain');
	$m->flush_buffer();

	foreach my $tag (
		"category",
		"chapter",
		"circuit",
		"entry",
		"event",
		"jpool",
		"judge",
		"panel",
		"person",
		"region",
		"round",
		"rpool",
		"school",
		"student",
		"protocol",
		"tourn"
	) {

		my $sth = $dbh->prepare("
			select count(setting.id)
			from ".$tag."_setting setting
			where not exists (
				select id from $tag where $tag.id = setting.$tag
			)
		");

		$sth->execute();

		my ($result_count) = $sth->fetchrow_array();
		$sth->finish();

		$m->print("\n\n$tag found $result_count blanks\n");
		$m->flush_buffer();

		$sth = $dbh->prepare("
			delete setting.*
			from ".$tag."_setting setting
			where not exists (
				select id from $tag where $tag.id = setting.$tag
			)
		");

		$sth->execute();
		$sth->finish();

		$m->print("Duplicate settings deleted\n");
		$m->flush_buffer();

		$sth = $dbh->prepare("
			alter table ".$tag."_setting
			add constraint fk_setting_".$tag."
			foreign key if not exists (".$tag.")
			references ".$tag." (id)
			on delete cascade
			on update cascade;
		");

		$sth->execute();
		$sth->finish();

		$m->print("Foreign key constraint added");
		$m->flush_buffer();
	}

	$dbh->disconnect();
	$m->abort();

</%init>
