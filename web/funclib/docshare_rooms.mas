<%args>
	$round => undef
</%args>
<%init>

    use REST::Client;

	unless (
		$round->event->type eq "debate"
		&& ( $round->event->setting("auto_docshare"))
	) {
		return "Not today, Satan";
	}

	my $share_url = $Tab::indexcards_url.'/tab/'.$tourn.'/round/'.$round.'makeShareRooms';

	my $dbh = Tab::DBI->db_Main();

	my $sth = $dbh->prepare("
		select
			distinct panel.id
			from panel
		where panel.round = ?
			and panel.bye = 0
			and NOT EXISTS (
				select ps.id
				from panel_setting ps
				where ps.tag = 'share'
				and ps.panel = panel.id
			)
	");

	$sth->execute($round->id);

	my $result_ref = $sth->fetchall_hash();

	my @panel_ids;

	foreach my $ref (@{$result_ref}) {
		push @panel_ids, $ref->{"id"};
	}

	my %post_ref = (
		panels    => \@panel_ids,
		share_key => $Tab::docshare_key
	);

	my $post = JSON::encode_json(\%post_ref);

    my $client = REST::Client->new(
        host => $Tab::indexcards_url
    );

	$client->POST(
		$share_url,
		$post,
		{
		  'Accept'        => 'application/json',
		  'Content-Type'  => 'application/json'
		}
	);

	return "I DID IT";

</%init>
