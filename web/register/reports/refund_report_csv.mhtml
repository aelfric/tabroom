<%args>
	$tourn
	$tourn_settings
</%args>
<%init>

    my $name = $tourn->name;
    $name =~ s/[\W_]//g;
    my $filename = "RefundInformation-$name.csv";

	$m->clear_buffer;
    $r->content_type('application/csv');
    $r->headers_out->{'Content-Disposition'} = "attachment; filename=$filename";

	$m->print("School, Balance, Method, ");
	$m->print("Refund Payable To, Refund Address \n");

	my %school_data = $m->comp(
        "/funclib/balances.mas",
        tourn          => $tourn,
        tourn_settings => $tourn_settings,
        all            => 1
    );

	my %school_settings = $m->comp("/funclib/school_settings.mas",
		tourn => $tourn
	);

	foreach my $school (sort {$a->name cmp $b->name} $tourn->schools) {

		my $school_id;

		$m->print('"'.$school->name.'",');
		$m->print('"'.$school_data{$school->id}{"balance"}.'",');

		$m->print('"'.$school_settings{$school_id}{"refund_method"}.'",');
		$m->print('"'.$school_settings{$school_id}{"refund_payable"}.'",');
		my $address = $school_settings{$school_id}{"refund_address"};

		my %add_hash = eval {
			return %{$address};
		};

		if (keys %add_hash) {
			$m->print('"'.$address->{"contact_name"}.'",');
			$m->print('"'.$address->{"street"}.'",');
			$m->print('"'.$address->{"secondary"}.'",');
			$m->print('"'.$address->{"city"}.'",');
			$m->print('"'.$address->{"state"}.'",');
			$m->print('"'.$address->{"zip"}.'",');
			$m->print('"'.$address->{"country"}.'",');
		} elsif ($address) {
			$m->print('"'.$address);
		}

		$m->print("\n");


	} # end of foreach school

	$m->abort;

</%init>
