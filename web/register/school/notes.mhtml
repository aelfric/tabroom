<%args>
	$tourn
	$tourn_settings
	$school_id => undef
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id) if $school_id;
	$m->abort unless $school;

	my $notes = $school->setting("notes");

	my $log_notes = $school->setting('notes_log');

</%init>

	<&
		"/register/menubar.mas",
		school         => $school,
		whoami         => "notes",
		tourn          => $tourn,
		tourn_settings => $tourn_settings
	&>

	<h5 class="martopmore">Notes</h5>

%	if ($notes) {
		<h6>Unlogged Notes</h6>
		<div class="row">
			<% $notes %>
		</div>
%	}

%	foreach my $log (@{$log_notes}) {
		<div class="row">
			<span
				class  = "fifth padvert"
				title  = "<% $log->{email} %>"
				person = "<% $log->{id} %>"
			>
				<% $log->{name} %>
			</span>

			<span class="fifth padvert smallish">
				<& /funclib/showdt.mas,
					string => $log->{timestamp},
					format => "murica_short",
					tz     => $tourn->tz,
				&>
			</span>
			<span class="threefifths">
				<% $log->{notes} %>
			</span>
		</div>
%	}

		<h6 class="martopmore">Add Note</h6>

		<form
			action="notes_save.mhtml"
			method="post"
		>

			<input
				type  = "hidden"
				name  = "school_id"
				value = "<% $school->id %>"
			>

			<div class="centeralign evenrow padvert padleftmore padrightmore">
				<textarea
					rows = "5"
					cols = "80"
					name = "notes"
				></textarea>
			</div>

			<div class="liblrow rightalign marno">
				<span class="third centeralign">
					<input
						type  = "submit"
						value = "Save Notes"
					>
				</span>
			</div>

		</form>

	</div>

