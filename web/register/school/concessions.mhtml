<%args>
	$person
	$tourn
	$tourn_settings
	$school_id => 0
</%args>
<%perl>

	my $school = Tab::School->retrieve($school_id) if $school_id;

	unless ($school) {
		$m->comp('/funclib/abort.mas', message => "School ID $school_id was nonexistent or invalid.");
	}

	my $label = $tourn_settings->{"concession_name"};

	$label = "Concessions" unless $label;

</%perl>

		<& "/register/menubar.mas",
			school         => $school,
			whoami         => "concessions",
			tourn          => $tourn,
			tourn_settings => $tourn_settings
		&>

%		my @orders = $m->comp('/funclib/school_concessions.mas', school => $school );

%		if (@orders) {

			<h4>Existing orders for <% $label %></h4>

			<table>

				<tr class="yellowrow">

				<th class="smallish">
					Name
				</th>

				<th class="smallish">
					Unit Price
				</th>

				<th class="smallish">
					Placed
				</th>

				<th class="smallish centeralign">
					Qty
				</th>

				<th class="smallish centeralign">
					Total
				</th>

				<td>
				</td>

			</tr>

%			foreach my $order (@orders) {

				<tr class="row">

					<td class="smallish">
						<% $order->concession->name %>
					</td>

					<td class="smallish">
						<% $order->concession->price %>
					</td>

					<td class="smallish">
						<% $order->placed
							? Tab::niceshortdt($order->placed->set_time_zone($tourn->tz))
							: ""
						%>
					</td>

					<td class="smallish centeralign">
						<% $order->quantity %>
					</td>

					<td class="smallish centeralign">
						<% $order->quantity * $order->concession->price %>
					</td>

					<td class="smallish centeralign">
						<a
							class = "redtext buttonwhite fa fa-trash fa-sm"
							href  = "concession_rm.mhtml?order_id=<% $order->id %>"
						> </a>
					</td>

				</tr>

%			}

			</table>
%		}

			<br />

			<h4>Add new orders for <% $label %></h4>

			<form
				action = "concessions_save.mhtml"
				method = "post"
			>

			<input
				type  = "hidden"
				name  = "school_id"
				value = "<% $school_id %>"
			>

			<table>

				<tr class="yellowrow">

				<th class="smallish">
					Name
				</th>

				<th class="smallish">
					Unit Price
				</th>

				<th class="smallish">
					Quantity
				</th>

			</tr>

%			foreach my $concession (sort {$a->name cmp $b->name} $tourn->concessions) {

				<tr class="row">

					<th class="smallish">
						<% $concession->name %>
					</th>

					<td class="smallish">
						$<% sprintf ("%.2f", $concession->price) %>
					</td>

					<td class="smallish">
						<input
							type = "number"
							size = "12"
							name = "<% $concession->id %>"
						>
					</td>

				</tr>

%			}

			<tr class="liblrow">
				<td class="rightalign" colspan="3">
					<input
						type  = "submit"
						value = "Save Orders"
					>
					</form>
				</td>
			</tr>

		</table>

	</div>

	<div class="menu">

		<div class="sidenote">

			<h4>Printouts</h4>

			<a class="blue full"
				href="concessions_print.mhtml?school_id=<% $school->id %>"
			>Print <% $label %> Order</a>

			<br />

		</div>

	</div>
