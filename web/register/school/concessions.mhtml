<%args>
	$person
	$tourn
	$tourn_settings
	$school_id => 0
</%args>
<%perl>

	my $school = Tab::School->retrieve($school_id) if $school_id;

	unless ($school) {
		$m->comp('/funclib/abort.mas', message => "School ID $school_id was nonexistent or invalid.");
	}

	my $label = $tourn_settings->{"concession_name"};

	$label = "Concessions" unless $label;

	my @orders = Tab::ConcessionPurchase->search( school => $school->id, concession => $concession->id ) if $concession;
	@orders = Tab::ConcessionPurchase->search( school => $school->id ) unless $concession;

	if ($charge) {
		my $total;
		foreach my $order (@orders) {
			my $price = ($order->concession->price * $order->quantity);
			$total += $price;
		}
		return $total;
	}

	if ($count) {
		my $total;
		foreach my $order (@orders) {
			$total += $order->quantity;
		}
		return $total;
	}

</%perl>

		<& "/register/menubar.mas",
			school         => $school,
			whoami         => "concessions",
			tourn          => $tourn,
			tourn_settings => $tourn_settings
		&>

%		if (@orders) {

			<h4>Existing orders for <% $label %></h4>

			<table>

				<tr class="yellowrow">

				<th class="smallish">
					Name
				</th>

				<th class="smallish">
					Unit Price
				</th>

				<th class="smallish">
					Placed
				</th>

				<th class="smallish centeralign">
					Options
				</th>

				<th class="smallish centeralign">
					Qty
				</th>


				<th class="smallish centeralign">
					Total
				</th>

				<td>
				</td>

			</tr>

%			foreach my $order (@orders) {

				<tr class="row">

					<td class="smallish">
						<% $order->concession->name %>
					</td>

					<td class="smallish">
						<% $order->concession->price %>
					</td>

					<td class="smallish">
						<% $order->placed
							? Tab::niceshortdt($order->placed->set_time_zone($tourn->tz))
							: ""
						%>
					</td>

					<td class="smallish centeralign">
%						foreach my $option ($order->options) {
							<div class="full padvertless">
								<% $option->name %>
							</div>
%						}
					</td>

					<td class="smallish centeralign">
						<% $order->quantity %>
					</td>

					<td class="smallish centeralign">
						<% $order->quantity * $order->concession->price %>
					</td>

					<td class="smallish centeralign">
						<a
							class = "redtext buttonwhite fa fa-trash fa-sm"
							href  = "concession_rm.mhtml?order_id=<% $order->id %>"
						> </a>
					</td>

				</tr>
%			}
			</table>
%		}

		<h4 class="martop">
			Add new orders for <% $label %>
		</h4>

		<form
			action = "concessions_save.mhtml"
			method = "post"
		>

			<input
				type  = "hidden"
				name  = "school_id"
				value = "<% $school_id %>"
			>

			<table>

				<thead>
					<tr class="yellowrow">
						<th class="smallish">
							Name
						</th>

						<th class="smallish">
							Unit Price
						</th>

						<th class="smallish">
							Options
						</th>

						<th class="smallish">
							Quantity
						</th>
					</tr>
				</thead>

				<tbody>

%					foreach my $concession (sort {$a->name cmp $b->name} $tourn->concessions) {

						<tr class="row">
							<th class="smallish">
								<% $concession->name %>
							</th>

							<td class="smallish">
								$<% sprintf ("%.2f", $concession->price) %>
							</td>

							<td class="smallish">
<%perl>
								foreach my $type ($concession->types) {
									next unless $type->options;
</%perl>
									<div class="full marno">
										<select name="<% $type->id %>">
%										foreach my $option ($type->options) {
%											next if $option->disabled;
											<option
												value="<% $option->id %>"
											><% $option->name %> (<% $option->description %>)</option>
%										}
										</select>
									</div>
%								}
							</td>

							<td class="smallish">
								<input
									type = "number"
									size = "12"
									name = "<% $concession->id %>"
								>
							</td>
						</tr>
%					}
				</tbody>
			</table>

			<div class="liblrow rightalign">
				<span class="third centeralign">
					<input
						type  = "submit"
						value = "Save Orders"
					>
				</span>
			</div>
		</form>
	</div>

	<div class="menu">
		<div class="sidenote">
			<h4>Printouts</h4>
			<a class="blue full"
				href="print/concessions.mhtml?school_id=<% $school->id %>"
			>Print <% $label %> Order</a>
		</div>
	</div>
